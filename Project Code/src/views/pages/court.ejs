<!-- Template For Displaying a Court
    - Display all court times for a given park in a list on this page
-->

<%- include ('../partials/header')%>
<link rel="stylesheet" href="/css/court.css" />
<main>
  <%- include ('../partials/menu')%>
  <div class="container">
    <div class="text-left mt-3 ">
      <a href="javascript:history.back()" class="btn btn-back ">Back</a>
    </div>
    <div class="d-flex justify-content-center flex-column align-items-center align-content-center">
    <h2 class="text-center mt-4"><%-court[0].name%></h2>
    <div class="div-times p-2 d-flex flex-wrap  justify-content-center mt-5 shadow ">
      <% times.forEach(time => { %>
      <div class="times d-flex m-1 p-1 ">
        <p>8:00-10:00</span>
      </div>
      <%}) %>
    </div></div>
  </div>
</main>

<%- include ('../partials/footer') %>
