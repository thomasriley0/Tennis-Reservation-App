<!-- Template For Displaying a Park
    - Display all courts at park in a list on this page
-->

<%- include ('../partials/header')%>
<link rel="stylesheet" href="/css/parks.css" />
<main>
  <%- include ('../partials/menu')%>

  <div class="container">
    <div class="text-left mt-3">
      <a href="javascript:history.back()" class="btn btn-back">Back</a>
    </div>
    <h3 class="text-center mt-4"><%-park.name%></h3>

    <div class="div-courts d-flex flex-wrap mt-5 justify-content-center">
      <% courts.forEach(court => {%>
      <a href="/court?courtid=<%-court.courtid%>">
        <div class="d-flex justify-content-center">
          <div
            class="court-card d-flex flex-wrap flex-column align-items-center justify-content-center p-3 m-1 shadow"
          >
            <h3 class="text-center mt-3"><%-court.name%></h3>
            <div
              class="div-times p-2 d-flex flex-wrap justify-content-center mt-2"
            >
              <% courts.forEach(time => { %>
              <div class="times d-flex m-1 p-1">
                <span
                  ><%- (time.start_time)/100 %>:00 - <%- (time.end_time)/100
                  %>:00</span
                >
              </div>
              <%}) %>
            </div>
          </div>
        </div>
      </a>
      <%})%>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>
