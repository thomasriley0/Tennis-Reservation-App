<!-- Template For Displaying a Park
    - Display all courts at park in a list on this page
-->

<%- include ('../partials/header')%>
<link rel="stylesheet" href="/css/parks.css" />
<main>
  <%- include ('../partials/menu')%>

  <div class="container">
    <h3 class="text-center mt-4"><%-park.name%></h3>

    <div class="court-div d-flex flex-wrap mt-5 justify-content-center">
      <!-- for each court{
        <a href="/court?id=c.id">
            <div>
                c.image ?
                c.name
                c.times
            </div>
        </a>
        } -->
      <% court_q.forEach(court => {%>
      <a href="/court?courtid=<%-court.courtid%>">
        <div class="court-card d-flex justify-content-center mb-2 mr-2">
          <h3 class="text-center mt-4"><%-court.name%></h3>
        </div>
      </a>
      <%})%>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>
